{
    "compilerOptions": {
        "types": ["vite/client"],//引入类型声明文件
        "declaration": true,//生成.d.ts文件
        "declarationDir": "dist/types", //指定打包生成的.d.ts文件放置的位置
        "skipLibCheck": true, //跳过对库的ts检查
        "esModuleInterop": true, //使用import导入commonJS规范的包
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve" //preserve保留jsx文件，直接不处理，原样输出。jsx文件就不会报错提示了
    },

}